#!/usr/bin/env python3
"""
Simple Codex CLI stub that echoes the received prompt.
Supports both argv mode (`codex "<prompt>"`) and stdin.
"""

import sys


def main() -> None:
    """Echo the provided prompt, accepting either argv or stdin input."""
    if len(sys.argv) > 1:
        prompt = sys.argv[1]
    else:
        prompt = sys.stdin.read()
    print(f"Codex received prompt: {prompt}")


if __name__ == "__main__":
    main()
